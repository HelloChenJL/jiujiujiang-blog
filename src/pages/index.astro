---
import BaseLayout from "@/layouts/BaseLayout.astro";
import HomePage from "~/components/home/HomePage";
import { getHomePageProfile, homePageLinks } from "@/config/homePageConfig";

const profile = await getHomePageProfile();
---

<BaseLayout fullScreen={true}>
  <HomePage profile={profile} links={homePageLinks} />
</BaseLayout>

<style>
  @keyframes floatDown {
    0% {
      transform: translateY(-20%);
      opacity: 0;
    }
    30% {
      opacity: 1;
    }
    100% {
      transform: translateY(120%);
      opacity: 0;
    }
  }
</style>
